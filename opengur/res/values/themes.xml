    <style name="Theme_Light.Pink">
        <item name="colorPrimary">@color/theme_pink_primary</item>
        <item name="colorPrimaryDark">@color/theme_pink_dark</item>
        <item name="colorAccent">@color/theme_pink_accent</item>
    </style>

    <style name="Theme_Light.Purple">
        <item name="colorPrimary">@color/theme_purple_primary</item>
        <item name="colorPrimaryDark">@color/theme_purple_dark</item>
        <item name="colorAccent">@color/theme_purple_accent</item>
    </style>

    <style name="Theme_Light.Grey">
        <item name="colorPrimary">@color/theme_grey_primary</item>
        <item name="colorPrimaryDark">@color/theme_grey_dark</item>
        <item name="colorAccent">@color/theme_grey_accent</item>
