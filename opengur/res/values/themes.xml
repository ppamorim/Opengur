<resources>

    <style name="Theme_Translucent_Light" parent="Theme_Not_Translucent_Light" />

    <style name="Settings_Theme_Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="Theme_Not_Translucent_Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme_Translucent_Main_Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- Override styles (Light) -->
    <style name="Theme_Light">
        <item name="android:textColorLink">?colorAccent</item>
        <item name="cardBG">@color/cardview_light_background</item>
        <item name="emptyDrawableUploads">@drawable/empty_uploads_light</item>
        <item name="emptyDrawableMessages">@drawable/no_comments_light</item>
        <item name="errorDrawable">@drawable/error_light</item>
        <item name="repliesDrawable">@drawable/ic_add_black_18dp</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="toolBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="dividerColor">@color/background_material_dark</item>
        <item name="snack_bar_text_action_color">?colorAccent</item>
    </style>

    <style name="Theme_Light.Blue">
        <item name="colorPrimary">@color/theme_blue_primary</item>
        <item name="colorPrimaryDark">@color/theme_blue_dark</item>
        <item name="colorAccent">@color/theme_blue_accent</item>
    </style>

    <style name="Theme_Light.Orange">
        <item name="colorPrimary">@color/theme_orange_primary</item>
        <item name="colorPrimaryDark">@color/theme_orange_dark</item>
        <item name="colorAccent">@color/theme_light_blue_accent</item>
    </style>

    <style name="Theme_Light.Cyan">
        <item name="colorPrimary">@color/theme_cyan_primary</item>
        <item name="colorPrimaryDark">@color/theme_cyan_dark</item>
        <item name="colorAccent">@color/theme_cyan_accent</item>
    </style>

    <style name="Theme_Light.Green">
        <item name="colorPrimary">@color/theme_green_primary</item>
        <item name="colorPrimaryDark">@color/theme_green_dark</item>
        <item name="colorAccent">@color/theme_green_accent</item>
    </style>

    <style name="Theme_Light.Teal">
        <item name="colorPrimary">@color/theme_teal_primary</item>
        <item name="colorPrimaryDark">@color/theme_teal_dark</item>
        <item name="colorAccent">@color/theme_teal_accent</item>
    </style>

    <style name="Theme_Light.Red">
        <item name="colorPrimary">@color/theme_red_primary</item>
        <item name="colorPrimaryDark">@color/theme_red_dark</item>
        <item name="colorAccent">@color/theme_red_accent</item>
