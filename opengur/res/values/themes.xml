    <style name="Theme_Light.Black">
        <item name="colorPrimary">@color/theme_black_primary</item>
        <item name="colorPrimaryDark">@color/theme_black_dark</item>
        <item name="colorAccent">@color/theme_black_accent</item>
    </style>

    <!-- Override styles (Dark) -->
